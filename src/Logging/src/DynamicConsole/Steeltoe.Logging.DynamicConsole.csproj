<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net10.0;net8.0</TargetFrameworks>
    <Description>Manage minimum logging levels at runtime using ConsoleLogger.</Description>
    <PackageTags>logging;dynamic-logging;console;log-management;monitoring</PackageTags>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <Import Project="..\..\..\..\shared.props" />

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="$(FoundationalVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Common\src\Common\Steeltoe.Common.csproj" />
    <ProjectReference Include="..\Abstractions\Steeltoe.Logging.Abstractions.csproj" />
  </ItemGroup>
</Project>
