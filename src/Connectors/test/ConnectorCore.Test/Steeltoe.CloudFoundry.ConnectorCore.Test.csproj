<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup Condition="! $(OS.Contains('Win'))">
    <TargetFrameworks>netcoreapp2.1;netcoreapp3.1;net5.0</TargetFrameworks>
  </PropertyGroup>
