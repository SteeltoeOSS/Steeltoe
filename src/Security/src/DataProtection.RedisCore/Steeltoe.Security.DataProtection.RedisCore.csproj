<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\..\..\..\versions.props" />

  <PropertyGroup>
    <Description>ASP.NET Core DataProtection Redis Key Store</Description>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <AssemblyName>Steeltoe.Security.DataProtection.RedisCore</AssemblyName>
    <PackageId>Steeltoe.Security.DataProtection.RedisCore</PackageId>
    <PackageTags>CloudFoundry;ASPNET Core;Security;DataProtection;Redis</PackageTags>
  </PropertyGroup>
  <Import Project="..\..\..\..\sharedproject.props" />

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="$(SourceLinkGitHubVersion)" PrivateAssets="All"/>
    <PackageReference Include="Microsoft.AspNetCore.DataProtection" Version="$(AspNetCoreVersion)" />
    <PackageReference Include="Microsoft.AspNetCore.DataProtection.Redis" Version="$(AspNetCoreDataProtectionRedisVersion)" />
    <PackageReference Include="StyleCop.Analyzers" Version="$(StyleCopVersion)">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
  </ItemGroup>
</Project>