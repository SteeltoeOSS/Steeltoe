<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net8.0</TargetFrameworks>
    <Description>ASP.NET Core middleware that enables an application to support authorization via client certificates.</Description>
    <PackageTags>aspnetcore;authorization;security;x509;certificate;mutualtls</PackageTags>
    <IsPackable>true</IsPackable>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <Import Project="..\..\..\..\shared.props" />

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication.Certificate" Version="$(MatchTargetFrameworkVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Common\src\Common.Certificate\Steeltoe.Common.Certificate.csproj" />
  </ItemGroup>
</Project>
