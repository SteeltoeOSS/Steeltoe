<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net8.0</TargetFrameworks>
    <Description>This package provides support for authorization with client certificates.</Description>
    <PackageTags>aspnetcore;authorization;security;x509;certificate;mutualtls</PackageTags>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <Import Project="..\..\..\..\shared.props" />

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication.Certificate" Version="$(MatchTargetFrameworkVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Common\src\Certificates\Steeltoe.Common.Certificates.csproj" />
  </ItemGroup>
</Project>
