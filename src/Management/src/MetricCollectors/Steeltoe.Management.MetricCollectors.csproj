<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net6.0</TargetFrameworks>
    <Description>Metric Collectors, intended for use within Steeltoe Management</Description>
    <PackageTags>management;monitoring;distributed tracing;metrics</PackageTags>
    <IsPackable>true</IsPackable>
    <Nullable>enable</Nullable>
    <!-- The compiler constants below are required for the copied code in SystemDiagnosticsMetrics -->
    <DefineConstants>$(DefineConstants);MEMORYMARSHAL_SUPPORT</DefineConstants>
  </PropertyGroup>

  <Import Project="..\..\..\..\shared.props" />

  <ItemGroup>
    <PackageReference Include="System.Text.Json" Version="$(SystemVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Common\src\Abstractions\Steeltoe.Common.Abstractions.csproj" />
    <ProjectReference Include="..\..\..\Common\src\Common\Steeltoe.Common.csproj" />
  </ItemGroup>
</Project>
