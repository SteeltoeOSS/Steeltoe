  </PropertyGroup>

  <Import Project="..\..\..\..\versions.props" />
  <Import Project="..\..\..\..\sharedproject.props" />
  
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="$(ExtensionsVersion)" />
