<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net8.0</TargetFrameworks>
    <Description>Configuration Provider for reading CloudFoundry Service Bindings</Description>
    <PackageTags>Configuration;CloudFoundry;Services;Bindings</PackageTags>
    <IsPackable>true</IsPackable>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <Import Project="..\..\..\..\shared.props" />

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="$(FoundationalVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Abstractions\Steeltoe.Configuration.Abstractions.csproj" />
  </ItemGroup>
</Project>
